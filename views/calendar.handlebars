<button class="au-btn au-btn--block au-btn--green m-b-20" data-toggle="modal" data-target="#addEventModal"
  data-placement="top">Add Event</button>

<div id="calendar"></div>

<div class="modal fade" id="addEventModal" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel"
  style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="scrollmodalLabel">Add Event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="card-header">
            <strong>Add Event</strong>
            <small>Form</small>
          </div>

          <div class="card-body card-block">
            <!-- Choose Job -->
            <div class="form-group">
              <label for="status" class=" form-control-label">Choose Job <span style="color: red;">*</span></label>
              <select name="select" id="select-job" class="form-control">
                {{#each jobs as |job|}}
                <option value="{{job.id}}">{{job.company_name}}: {{job.title}}</option>
                {{/each}}
              </select>
            </div>

            <!-- Event Title -->
            <div class="form-group">
              <label for="title" class=" form-control-label">Title <span style="color: red;">*</span></label>
              <input type="text" id="title" placeholder="Enter a title for this event" class="form-control">
            </div>

            <!-- Start -->
            <div class="form-group">
              <label for="start-date-month" class=" form-control-label">Start Date <span
                  style="color: red;">*</span></label>
              <input type="text" id="start-date-month" placeholder="Enter Month (MM)" class="form-control">
              <input type="text" id="start-date-day" placeholder="Enter day (DD)" class="form-control">
              <input type="text" id="start-date-year" placeholder="Enter year (YYYY)" class="form-control">
              <input type="text" id="start-time-hour" placeholder="Enter hour (HH)" class="form-control">
              <input type="text" id="start-time-minutes" placeholder="Enter minutes (MM)" class="form-control">
              <select name="select" id="select-start-am-pm" class="form-control">
                <option value="0">AM</option>
                <option value="1">PM</option>
              </select>
            </div>

            <!-- End -->
            <div class="form-group">
              <label for="end-date-month" class=" form-control-label">End Date <span
                  style="color: red;">*</span></label>
              <input type="text" id="end-date-month" placeholder="Enter Month (MM)" class="form-control">
              <input type="text" id="end-date-day" placeholder="Enter day (DD)" class="form-control">
              <input type="text" id="end-date-year" placeholder="Enter year (YYYY)" class="form-control">
              <input type="text" id="end-time-hour" placeholder="Enter hour (HH)" class="form-control">
              <input type="text" id="end-time-minutes" placeholder="Enter minutes (MM)" class="form-control">
              <select name="select" id="select-end-am-pm" class="form-control">
                <option value="0">AM</option>
                <option value="1">PM</option>
              </select>
            </div>

            <!-- URL -->
            <div class="form-group">
              <label for="url" class="form-control-label">URL</label>
              <input type="text" id="url" placeholder="Enter URL (optional)" class="form-control">
            </div>

            <button id="add-event-button" type="button" class="btn btn-primary">Add Event</button>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- FullCalender JS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.js"></script>

<script src="./js/calendar.js"></script>
